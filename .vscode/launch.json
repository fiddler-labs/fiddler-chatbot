{
  "configurations": [
    {
      "name": "Run AGENTIC Chatbot (Manual CLI chat)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/chatbot_agentic.py",
      "console": "integratedTerminal",
      // "console": "externalTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run AGENTIC Chatbot (Automated)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/chatbot_agentic.py",
      "args": ["Hello", "What is the current time?", "quit"],
      "console": "integratedTerminal",
      // "console": "externalTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run LEGACY Chatbot CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/chatbot.py",
      // "args": [],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run LEGACY Chatbot Streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/src/chatbot.py"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run Data-Generation-Workflow",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/data_generation.py",
      // "args": [],
      "console": "integratedTerminal",
      // "console": "externalTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
