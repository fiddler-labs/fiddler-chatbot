{
  "configurations": [
    {
      "name": "Run Fiddler-Chatbot : local streamlit app",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/app.py",
      // "args": [],
      "console": "integratedTerminal",
      // "console": "externalTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run Data-Generation-Workflow",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/data_generation.py",
      // "args": [],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test Logger: Run Fiddler-Chatbot (Logged)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/utils/test_logger.py",
      "args": ["python ${workspaceFolder}/src/app.py", "src/app.py"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test Logger: Run Data-Generation (Logged)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/utils/test_logger.py",
      "args": ["python ${workspaceFolder}/src/data_generation.py", "src/data_generation.py"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test Logger: Run Pytest (Logged)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/utils/test_logger.py",
      "args": ["python -m pytest tests/ -v", "tests/"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Test Logger: Custom Command",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/utils/test_logger.py",
      "args": ["${input:customCommand}", "${input:testFilePath}"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "customCommand",
      "description": "Enter the command to execute (e.g., 'uv run pipeline')",
      "default": "python -c 'print(\"Hello World\")'",
      "type": "promptString"
    },
    {
      "id": "testFilePath",
      "description": "Enter the test file path (e.g., 'src/app.py')",
      "default": "test_file.py",
      "type": "promptString"
    }
  ]
}
