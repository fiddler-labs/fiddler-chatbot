{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Load Environment Variables",
      "type": "shell",
      "command": "source ${workspaceFolder}/load_env.sh",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Update Chainlit.md with Build Info",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python ${workspaceFolder}/src/utils/update_chainlit_version.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "AWS Login",
      "type": "shell",
      "command": "awslogin",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Build Script",
      "type": "shell",
      "command": "./build-and-deploy.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Build Script without Cache",
      "type": "shell",
      "command": "./build-and-deploy.sh --no-cache",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Get List of Running Pods",
      "type": "shell",
      "command": "kubectl get pods -n fiddler-chatbot",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Deploy Chatbot to QA",
      "dependsOn": [
        "Update Chainlit.md with Build Info",
        "AWS Login",
        "Run Build Script",
        "Get List of Running Pods"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Deploy Chatbot to QA (Full rebuild)",
      "dependsOn": [
        "Update Chainlit.md with Build Info",
        "AWS Login",
        "Run Build Script without Cache",
        "Get List of Running Pods"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
