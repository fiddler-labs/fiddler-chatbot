{
  "name": "Fiddler Chatbot - Chainlit",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/app",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "src/chatbot_chainlit_react.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.extraPaths": [
          "/app/src"
        ]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy"
      ]
    }
  },
  // Mount workspace and .env file
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.env,target=/app/.env,type=bind,consistency=cached"
  ],
  // Run the application automatically when container starts
  "postAttachCommand": {
    "server": "sh -c '/app/.venv/bin/python /app/src/utils/guardrails_warmup.py & exec /app/.venv/bin/chainlit run src/chatbot_chainlit_react.py --host 0.0.0.0 --port 8000'"
  },
  // Port forwarding configuration - automatically opens browser
  "portsAttributes": {
    "8000": {
      "label": "Chainlit Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8000
  ],
  // Set environment variables
  "remoteEnv": {
    "PYTHONPATH": "/app",
    "HOST": "0.0.0.0",
    "PORT": "8000"
  },
  // Use the appuser from Dockerfile
  "remoteUser": "appuser",
  // Override command to allow postAttachCommand to run
  "overrideCommand": true
}
